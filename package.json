{
  "name": "lovelystay-cli",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "bin": {
    "lovelystay": "./dist/index.js"
  },
  "scripts": {
    "prettier": "npx prettier -c src",
    "build": "npx tsc",
    "lovelystay": "node ./dist/index.js",
    "lovelystay-dev": "npm run build && npm run lovelystay",
    "migrate": "npx node-pg-migrate --tsconfig ./tsconfig.json -d DB_URL"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "node-pg-migrate": "^6.2.2",
    "pg-promise": "^10.11.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
